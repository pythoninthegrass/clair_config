/* ConfigOption styles */
ConfigOption {
    layout: horizontal;
    height: 1;
    padding: 0;
    margin: 0;
    align: left middle;
}

ConfigOption Label {
    width: 55%;
    text-align: left;
    margin-right: 1;
    height: 1;
}

ConfigOption Select {
    width: 45%;
    height: 1;
}

ConfigOption Input {
    width: 45%;
    height: 1;
}

ConfigOption Switch {
    width: auto;
    height: 1;
}

/* GameVersionSection styles */
GameVersionSection {
    background: $surface;
    border: tall $primary-background;
    padding: 0 1;
    margin: 0 1 0 0;
    height: auto;
    width: 50%;
}

GameVersionSection Static {
    text-style: bold;
    margin: 0;
}

GameVersionSection RadioSet {
    layout: horizontal;
    height: 1;
}

GameVersionSection RadioButton {
    width: auto;
    margin: 0 2 0 0;
}

/* GraphicsSection styles */
GraphicsSection {
    background: $surface;
    border: tall $primary-background;
    padding: 0 1;
    margin: 1 0 0 0;
    height: auto;
}

GraphicsSection Static {
    text-style: bold;
    margin: 0 0 1 0;
}

.graphics-grid {
    layout: horizontal;
    height: auto;
    margin: 0;
    padding: 0;
}

.graphics-column {
    layout: vertical;
    width: 50%;
    height: auto;
    padding: 0 1;
}

